%nav.wrapper.grid-container
  %h1 Now Play Us
  = link_to image_tag("now-play-us-logo.png"), root_url, id: 'logo', class: 'grid-15 mobile-grid-100'
  %ul#main-menu.grid-45.mobile-grid-100
    %li= link_to "Blog", "http://blog.nowplay.us"
    - if current_user
      %li= link_to "Events", events_path
      %li= link_to "Add Event", new_event_path
  %ul#user-menu.grid-40.mobile-grid-100
    - if current_user
      %li= link_to image_tag(current_user.avatar_url, class: "avatar") + " My Profile",   user_path(current_user)
      %li= link_to "Settings", edit_user_path(current_user)
      %li= link_to "Logout", :logout, class: 'navbar-link'
    - else
      %li= link_to 'Login with Twitter', '/auth/twitter', class: 'navbar-link'
      -#li= link_to 'Login with Facebook', '/auth/facebook', class: 'navbar-link'