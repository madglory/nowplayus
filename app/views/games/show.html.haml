.grid-container
  %h2
    = @game.name

  .game-details
    %hr
    =image_tag @game.screen_url unless @game.screen_url.blank?
    %p
      = @game.deck.html_safe unless @game.deck.blank?

    =Sanitize.clean(@game.description, :elements => ['h2', 'p', 'img'], :attributes => {'img' => ['width', 'height', 'src', 'title', 'alt'], 'a' => ['href', 'title'], 'span' => ['class']}, :protocols => {'a' => {'href' => ['http', 'https', 'mailto']}}).html_safe unless @game.description.blank?

    %small Game Descriptions provided by <a target="_blank" href="http://www.giantbomb.com">Giant Bomb</a>.
