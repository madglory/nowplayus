%article.event{ class: (current_user == event.host ? 'mine' : 'theirs')}
  .grid-70.mobile-grid-80
    .schedule.grid-10.mobile-grid-25= render partial: 'events/schedule', locals: { event: event }
    .description.grid-90.mobile-grid-75= render partial: 'events/description', locals: { event: event }
  .players.grid-30.mobile-grid-20
    .host.grid-33.mobile-grid-100= link_to image_tag(event.host_avatar_url), user_path(event.host)
    .slots.grid-33.mobile-grid-33.hide-on-mobile= "#{event.slots_filled}/#{event.slots}"
    .promote.grid-33.mobile-grid-33.hide-on-mobile TWEET