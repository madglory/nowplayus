
<h2>Event Details</h2>
<h3>User:   <%= @event.user.username %></h3>
<ul>
  <li>
    <h2><%= @event.title %></h2>    
    <%= @event.description %>    
    <%= @event.starts_at %> until <%= @event.starts_at+@event.duration %>
  </li>
  <li>
    Looking for <%= @event.slots %> players <% if @event.slots_filled > 0 %><%= @event.slots_filled %> found.<% end %>
  </li>

  <li>
    <% if @event.user == current_user %>
      You are hosting this event!
    <% else %>
      <% if @event.players.exists?(:user_id => current_user) %>
        <%= link_to "Can't play", user_event_players_leave_path(@event.user, @event) %>
      <% else %>
        <%= link_to "Join the team", user_event_players_join_path(@event.user, @event) %>
      <% end %>
    <% end %>
  </li>

  <% if @event.players.size > 0 %>
  <li>
    Who's Playing?
    <ul>
      <% @event.players.each do |player| %>
        <li><%= player.user.username %></li>
      <% end %>
    </ul>
  </li>
  <% end %>
</ul>


