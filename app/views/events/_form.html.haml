= simple_form_for @event do |f|
  = f.input :game_id, as: :hidden, input_html: { class: 'bigdrop' }
  = f.input :platform_id, collection: Platform.select('id,name').all, include_blank: true
  = f.input :starts_at_raw, label: 'Start Time', placeholder: 'Eg: Tonight 8pm', required: true
  = f.input :duration_raw, label: 'Duration', placeholder: 'Eg: 2 Hours', required: true
  = f.input :description, label: 'Additional Information'
  = f.input :total_players, collection: 2...19, label: 'How many players?'
  .panel.radius
    %h4 Notifications
    %p= f.input :notify_host, label_class: 'small-11 columns', input_html: { class: 'small-1 columns' }, label: 'Notify me when a player joins'
    %p
      = render partial: 'shared/twitter_follow'
      %br
      %small Make sure you follow @nowplayus on Twitter to receive Direct Message notifications.
  .row
    .large-3.columns
      = f.button :submit, 'Schedule', class: 'button small radius expand'