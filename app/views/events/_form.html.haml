= unsemantic_form_for @event do |f|
  = f.input :title, label: 'Game Title', placeholder: 'Eg: Borderlands 2, Halo 4'
  %fieldset
    = f.input :platform_id, collection: Platform.select('id,name').all, include_blank: true, label: 'Platform'
  = f.input :starts_at_raw, label: 'Start Time', placeholder: 'Eg: Tonight 8pm', required: true
  = f.input :duration_raw, label: 'Duration', placeholder: 'Eg: 2 Hours', required: true
  = f.input :description, label: 'Additional Information'
  = f.input :total_players, collection: 1...10, label: 'How many players?'
  %fieldset.form-actions
    = f.button :submit
