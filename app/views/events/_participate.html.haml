- if @event.players.exists?(:id => current_user)
  = link_to "Leave", event_participant_path(@event), confirm: 'Are you sure?', method: :delete, class: 'button small expand radius alert'
- else
  - if logged_in?
    = link_to "Join!", event_participants_path(@event), method: :post, class: 'button small expand radius success'
  - else
    = link_to "Login to Join", "/auth/twitter", method: :post, class: 'button small expand radius success'
