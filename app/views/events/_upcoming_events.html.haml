// Requires an events collection, and an optional user
.row
  %section.events-header.columns.large-12
    %h4.text-center
      Scheduled game events with
      = raw 'now<span class="blue">play</span>us'
    - if @ical_link
      %p.ical.text-right
        Subscribe via iCal
        != @ical_link

%section.events
  - @events.each do |event|
    = render event
  - if @events.blank?
    .row
      .large-12.columns
        %p Uh oh, it looks there are no upcoming events.  How about you schedule one!
        #callout
          = link_to 'Create an Event', new_event_path, class: 'callout-button'